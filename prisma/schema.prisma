// prisma/schema.prisma

/// 1) Prisma-Client Generator
generator client {
  provider = "prisma-client-js"
  // optional: Du kannst hier auch einen eigenen Output-Pfad angeben:
  // output   = "../node_modules/.prisma/client"
}

/// 2) Datasource
datasource db {
  provider = "sqlite"
  /// in .env:
  /// DATABASE_URL="file:./dev.db"
  url      = env("DATABASE_URL")
}

/// 3) (Deine bestehenden Models …)

/// … hier könnten weitere Models stehen, z.B. Investor, Holding, etc.

/// 4) Neues Subscriber-Model
model Subscriber {
  /// Die Kombination aus E-Mail und investorSlug ist der Primärschlüssel
  email        String
  investorSlug String
  createdAt    DateTime @default(now())

  @@id([email, investorSlug])
  @@map("subscribers")
}