// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
  // seit Prisma 7 brauchst du hier kein `output = â€¦` mehr
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL") // muss in .env stehen: DATABASE_URL="file:./dev.db"
}

/// Ein Abonnement, dass eine Email an einen Investor-Slug bindet
model Subscriber {
  id           String   @id @default(uuid())
  email        String
  investorSlug String
  createdAt    DateTime @default(now())

  @@unique([email, investorSlug])
  @@map("subscribers")
}
